<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/title_settings">

    <ListPreference
        android:defaultValue="@string/settings_order_by_newest_value"
        android:entries="@array/setting_order_by_labels"
        android:entryValues="@array/setting_order_by_values"
        android:icon="@drawable/ic_filter_list_black_24dp"
        android:key="@string/settings_order_by_key"
        android:title="@string/settings_order_by_label" />


    <ListPreference
        android:defaultValue="@string/settings_default_view_list_value"
        android:entries="@array/setting_default_view_labels"
        android:entryValues="@array/setting_default_view_values"
        android:icon="@drawable/ic_view_day_black_24dp"
        android:key="@string/settings_default_view_key"
        android:title="@string/settings_default_view_label" />

</PreferenceScreen>
